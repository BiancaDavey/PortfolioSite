---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import Edu from '../components/Edu.astro';
---

<BaseLayout title="About" description="About">
	<div class="stack gap-20">
		<main class="wrapper about">
			<Hero
				title="About"
			>
			</Hero>

			<section>
				<h2 class="section-title">Background</h2>
				<div class="content">
					<p>
						<br><br>Hi there! I’m Bianca Davey. 
						I’m passionate about creatively utilising technology to create engaging experiences.  
						<br><br>I have experience in collaborative software development, over 6 years of experience 
						in project management and client relations, and a Masters degree in Information Technology from the 
						University of New England, Australia.
						<br><br>I’ve lived and worked in Australia, the USA and Europe, and I speak German at the B2 level. 
						I’m based in London. 
					</p>
				</div>
			</section>
			<section>
				<h2 class="section-title">Technical Skills</h2>
				<div class="content">
					<p><br></br><b>Software Development</b></p>
					<div class="roles">
						<Pill><Icon icon="terminal-window" size="1.33em" />Java</Pill>
						<Pill><Icon icon="terminal-window" size="1.33em" />Kotlin</Pill>
						<Pill><Icon icon="terminal-window" size="1.33em" />C#</Pill>
						<Pill><Icon icon="terminal-window" size="1.33em" />OOP</Pill>
						<Pill><Icon icon="terminal-window" size="1.33em" />Python</Pill>
						<Pill><Icon icon="terminal-window" size="1.33em" />Visual Studio Code</Pill>
						<Pill><Icon icon="terminal-window" size="1.33em" />IntelliJ</Pill>
						<Pill><Icon icon="terminal-window" size="1.33em" />Git</Pill>
						<Pill><Icon icon="terminal-window" size="1.33em" />Game Development</Pill>
						<Pill><Icon icon="terminal-window" size="1.33em" />Unity</Pill>
					</div>
					<p><br></br><b>Web Development</b></p>
					<div class="roles">
						<Pill><Icon icon="code" size="1.33em" />TypeScript</Pill>
						<Pill><Icon icon="code" size="1.33em" />JavaScript</Pill>
						<Pill><Icon icon="code" size="1.33em" />CSS</Pill>
						<Pill><Icon icon="code" size="1.33em" />HTML</Pill>
						<Pill><Icon icon="code" size="1.33em" />React</Pill>
						<Pill><Icon icon="code" size="1.33em" />Angular</Pill>
						<Pill><Icon icon="code" size="1.33em" />Express.js</Pill>
						<Pill><Icon icon="code" size="1.33em" />Node.js</Pill>
						<Pill><Icon icon="code" size="1.33em" />MERN Stack</Pill>
						<Pill><Icon icon="code" size="1.33em" />Spring Boot</Pill>
					</div>
					<p><br></br><b>Data Management</b></p>
					<div class="roles">
						<Pill><Icon icon="list" size="1.33em" />MySQL</Pill>
						<Pill><Icon icon="list" size="1.33em" />postGreSQL</Pill>
						<Pill><Icon icon="list" size="1.33em" />MariaDB</Pill>
						<Pill><Icon icon="list" size="1.33em" />Relational DB Models</Pill>
						<Pill><Icon icon="list" size="1.33em" />MongoDB</Pill>
